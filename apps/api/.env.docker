# API — Docker/Production environment
# Safe to commit: Docker hostnames only, secrets left blank (fill on server).

NODE_ENV=production
PORT=3002
API_URL=http://api:3002/api/v1
CLIENT_URL=http://YOUR_SERVER_IP:3000

# MongoDB — hostname: mongodb
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=
MONGO_DATABASE=voxora-chat
MONGODB_URI=mongodb://admin:@mongodb:27017/voxora-chat?authSource=admin
DB_NAME=voxora-chat

# Redis — hostname: redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO — internal hostname: minio | public URL for browser-accessible presigned URLs
# !! REQUIRED: Without MINIO_PUBLIC_URL, presigned URLs contain 'minio' (Docker hostname)
# !! which browsers CANNOT resolve. Set to your server's public IP or domain.
MINIO_ENDPOINT=minio
MINIO_PORT=9001
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=
MINIO_BUCKET_NAME=voxora-chat
MINIO_PUBLIC_URL=http://YOUR_SERVER_IP:9001

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=30d

# File Upload
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://YOUR_SERVER_IP:3000

# Email
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
