# AI Worker — Docker/Production environment
# Safe to commit: Docker hostnames only, secrets left blank (fill on server).

# Redis — hostname: redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB — hostname: mongodb
MONGODB_URI=mongodb://admin:@mongodb:27017/voxora-chat?authSource=admin

# MinIO — internal hostname: minio
MINIO_ENDPOINT=minio
MINIO_PORT=9001
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=
MINIO_BUCKET_NAME=voxora-chat

# Qdrant — hostname: qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# LLM
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
LLM_PROVIDER=gemini

# Embeddings
EMBEDDING_PROVIDER=gemini
GEMINI_EMBEDDING_MODEL=text-embedding-004

# RAG
RAG_TOP_K=5
CHAT_HISTORY_LIMIT=20

# Workers
WORKER_CONCURRENCY=5
INGESTION_CONCURRENCY=2
